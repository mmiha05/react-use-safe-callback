    "@babel/preset-typescript": "^7.23.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.6",
    "@types/react": "^18.2.33",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
